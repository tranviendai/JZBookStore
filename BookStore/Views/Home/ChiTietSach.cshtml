@using BookStore.Models
@model Book
@{
    ViewBag.Title = "ChiTietSach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center; font-weight: 600">THÔNG TIN CHI TIẾT SÁCH</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-4">
        <img src="~/Images/@Model.image" style="width: 100%;" alt="" />
    </div>
    <div class="col-md-6 details">
        <h3 style="font-weight: bold">Tên sách: @Model.title</h3>
        <p style="text-align: justify">
            <span style="font-weight: bold">Mô tả: </span> @Model.description
        </p>
        <p class="price">
            Giá bán: <span style="color:red; font-size:32px;">
                @String.Format("{0:0.00}",
                         Model.price) VNĐ
            </span>
        </p>
        <a href="/Cart/AddCart/@Model.bookID" class="btn btn-primary add-cart">Thêm Vào Giỏ</a>
    </div>
</div>




