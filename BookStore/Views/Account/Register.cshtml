@model BookStore.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="forms-container">
    <div class="form-horizontal col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2 style="text-align:center">Đăng ký</h2>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "mb-3 mt-3 control-label" })
                    <div class="mb-3 mt-3">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "mb-3 mt-3 control-label" })
                    <div class="mb-3 mt-3">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "mb-3 mt-3 control-label" })
                    <div class="mb-3 mt-3">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FullName, new { @class = "mb-3 mt-3 control-label" })
                    <div class="mb-3 mt-3">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address, new { @class = "mb-3 mt-3 control-label" })
                    <div class="mb-3 mt-3">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "mb-3 mt-3 control-label" })
                    <div class="mb-3 mt-3">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="mb-3 mt-3">
                        <input type="submit" class="btn btn-success" value="Đăng ký" style="width: 100%; background: #68B984" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}