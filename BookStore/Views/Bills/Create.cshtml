@model BookStore.Models.Bill

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2 style="font-weight: 600; width: 200%">Tạo mới thông tin hóa đơn</h2>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.nameCustomer, htmlAttributes: new { @class = "control-label mb-3 mt-3" })
        <div class="mb-3 mt-3">
            @Html.EditorFor(model => model.nameCustomer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nameCustomer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.deliveryAddress, htmlAttributes: new { @class = "control-label mb-3 mt-3" })
        <div class="mb-3 mt-3">
            @Html.EditorFor(model => model.deliveryAddress, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.deliveryAddress, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.shipPhone, htmlAttributes: new { @class = "control-label mb-3 mt-3" })
        <div class="mb-3 mt-3">
            @Html.EditorFor(model => model.shipPhone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.shipPhone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.payment, htmlAttributes: new { @class = "control-label mb-3 mt-3" })
        <div class="mb-3 mt-3">
            <div class="checkbox">
                <div>
                    @Html.RadioButtonFor(model => model.payment, true)
                    Thanh Toán Trực Tuyến
                </div>
                <div>
                    @Html.RadioButtonFor(model => model.payment, false)
                    Thanh Toán Trực Tiếp
                </div>
                @Html.ValidationMessageFor(model => model.payment, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.deliveryForm, htmlAttributes: new { @class = "control-label mb-3 mt-3" })
        <div class="mb-3 mt-3">
            <div class="checkbox">
                <div>
                    @Html.RadioButtonFor(model => model.deliveryForm, true)
                    Giao Hàng Nhanh
                </div>
                <div>
                    @Html.RadioButtonFor(model => model.deliveryForm, false)
                    Giao Hàng Tiết Kiệm
                </div>
                @Html.ValidationMessageFor(model => model.deliveryForm, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.deliveryDate, htmlAttributes: new { @class = "control-label mb-3 mt-3" })
        <div class="mb-3 mt-3">
            @Html.DropDownListFor(model => model.deliveryDate,
                                   new List<SelectListItem>
                                   {
                                      new SelectListItem {Text = $"{DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")}"},
                                      new SelectListItem {Text = $"{DateTime.Today.AddDays(2).ToString("yyyy-MM-dd")}"},
                                      new SelectListItem {Text = $"{DateTime.Today.AddDays(3).ToString("yyyy-MM-dd")}"},
                                      new SelectListItem {Text = $"{DateTime.Today.AddDays(4).ToString("yyyy-MM-dd")}"},
                                      new SelectListItem {Text = $"{DateTime.Today.AddDays(5).ToString("yyyy-MM-dd")}"},
                                   }, new { @class = "form-control", Style = "max-width:370px!important" })
            @Html.ValidationMessageFor(model => model.deliveryDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.VoucherID, "Voucher", htmlAttributes: new { @class = "control-label mb-3 mt-3" })
        <div class="mb-3 mt-3">
            @Html.DropDownList("VoucherID", null, htmlAttributes: new { @class = "form-control", Style = "max-width:370px!important" })
            @Html.ValidationMessageFor(model => model.VoucherID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="back mb-3 mt-3">
            <input type="submit" value="Tạo mới" class="btn btn-primary" style="margin-right: 10px;" />
            @Html.ActionLink("Quay trở lại", "Index")
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}