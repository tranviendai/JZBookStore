@model BookStore.Models.Subject

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 style="font-weight: 600; font-size: 28px;">Chỉnh sửa thông tin chủ đề </h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.subjectID)

        <div class="form-group">
            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label mb-3 mt-3" })
            <div class="mb-3 mt-3">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="back mb-3 mt-3">
                <input type="submit" value="Lưu" class="btn btn-primary" style="margin-right: 10px;" />
                @Html.ActionLink("Quay trở lại", "Index")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
